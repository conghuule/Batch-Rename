<UserControl x:Class="AddSufixRule.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddSufixRule"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="White">
        <TextBlock VerticalAlignment="Center">Add suffix:</TextBlock>
        <TextBox
            Name="tbInputSuffix"
            Margin="0,5,0,0"
            VerticalAlignment="Center"
            Text="{Binding Suffix, Mode=OneWay}"
            TextChanged="tbInputSuffix_TextChanged" />
    </StackPanel>
</UserControl>
