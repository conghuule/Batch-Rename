<Window x:Class="BatchRename.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRename"
        xmlns:component="clr-namespace:BatchRename.Components"

        mc:Ignorable="d"
        Title="My Rename" Height="800" Width="1200" Loaded="Window_Loaded"
    xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2">
    <Window.Resources>


        <Style x:Key="ColumnHeaderGripperStyle" TargetType="{x:Type Thumb}">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="SizeWE"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Padding="16 8 16 16" Background="#ffffff">
        <DockPanel >
            <!--Navigation-->
            <Border DockPanel.Dock="Top" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal"  Height="40" HorizontalAlignment="Left" >
                    <Button BorderThickness="0" Cursor="Hand" Margin="4 0" Padding="8 0" Background="Transparent">
                        <StackPanel>
                            <Image Source="/Images/save.png" Width="20" Height="20" RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Text="Save"/>
                        </StackPanel>
                    </Button>
                    <Button BorderThickness="0" Cursor="Hand" Margin="4 0" Padding="8 0" Background="Transparent">
                        <StackPanel>
                            <Image Source="/Images/eye.png" Width="20" Height="20" RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Text="Preview"/>
                        </StackPanel>
                    </Button>
                    <Button BorderThickness="0" Cursor="Hand" Margin="4 0" Padding="8 0" Background="Transparent">
                        <StackPanel>
                            <Image Source="/Images/start.png" Width="20" Height="20" RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Text="Start"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!--Method / Rules -->
            <Grid DockPanel.Dock="Left" Width="480">
                <Grid.RowDefinitions>
                    <RowDefinition Height="54"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Rules" FontSize="28" FontWeight="Bold" Margin="0 0 0 16" Grid.ColumnSpan="2"/>
                <Border Grid.Row="1" Padding="20" Background="#EFF2F7" CornerRadius="8" Grid.ColumnSpan="2">
                   
                    <Grid Grid.Column="1" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel>
                            <TextBlock Text="Actions" FontSize="16" FontWeight="Bold" Foreground="#4b5563" Margin="0 0 0 12" />
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <component:Button Text="Add" ImageSource="/Images/add.png" BackgroundColor="#3b82f6" OnClick="Button_OnClick" Loaded="Button_Loaded"/>
                                <component:Button Text="Remove" ImageSource="/Images/remove.png" BackgroundColor="#ef4444"/>
                                <component:Button Text="Up" ImageSource="/Images/up-arrow.png" BackgroundColor="#3b82f6"/>
                                <component:Button Text="Down" ImageSource="/Images/down-arrow.png" BackgroundColor="#3b82f6"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="All rules" FontSize="16" FontWeight="Bold" Foreground="#4b5563" Margin="0 12" />
                            </StackPanel>

                        </StackPanel>


                   


                        <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" x:Name="pickedRulesDataGrid" Style="{DynamicResource DataGridStyle1}" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Number}"/>
                                <DataGridTemplateColumn Header="Name" IsReadOnly="True" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Width="25" Height="25" CornerRadius="50" Margin="0 0 10 0" Background="{Binding BgColor}">
                                                    <TextBlock Text="{Binding Character}" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" Margin="0 0 0 1"/>
                                                </Border>

                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" IsReadOnly="True" Width="*"/>
                             
                            </DataGrid.Columns>
                        </DataGrid>



                    </Grid>
                </Border>
            </Grid>

            <!--Rename field-->
            <Border Margin="16 0 0 0 ">
                <Grid DockPanel.Dock="Left">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="54"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Files" FontSize="28" FontWeight="Bold" Margin="0 0 0 16"/>
                    <Border Grid.Row="1" Padding="20" Background="#EFF2F7" CornerRadius="8">
                       
                            <Grid Grid.Column="1" >
                               
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel>
                                    <TextBlock Text="Actions" FontSize="16" FontWeight="Bold" Foreground="#4b5563" Margin="0 0 0 12" />
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <component:Button Text="Add files" ImageSource="/Images/add.png" BackgroundColor="#3b82f6"/>
                                        <component:Button Text="Add folder" ImageSource="/Images/add.png" BackgroundColor="#3b82f6"/>
                                        <component:Button Text="Remove" ImageSource="/Images/remove.png" BackgroundColor="#ef4444"/>
                                    </StackPanel>
                                <StackPanel>

                                    <TextBlock Text="All files" FontSize="16" FontWeight="Bold" Foreground="#4b5563" Margin="0 12" />



                                </StackPanel>
                            </StackPanel>





                            <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" Name="pickedFilesDataGrid" Style="{DynamicResource DataGridStyle1}" Grid.ColumnSpan="3" Grid.RowSpan="6" >
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Number}"/>
                                    <DataGridTemplateColumn Header="Filename" IsReadOnly="True" Width="*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                       
                                                    <TextBlock Text="{Binding Filename}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Newname" Binding="{Binding Newname}" IsReadOnly="True" Width="*"/>
                                    <DataGridTextColumn Header="Path" Binding="{Binding Path}" IsReadOnly="True" Width="*"/>
                                    <DataGridTextColumn Header="Error" Binding="{Binding Error}" IsReadOnly="True" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>



                            </Grid>
                      
                    </Border>

                </Grid>
            </Border>
        </DockPanel>
    </Border>

</Window>
