<UserControl x:Class="BatchRename.Components.Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BatchRename.Components"
             mc:Ignorable="d" 
             Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Click="Button_Click" Style="{StaticResource button}">
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding ImageSource, ElementName=root}" Width="16" Height="16" Margin="0 2 0 0" RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock Text="{Binding Text, ElementName=root}" FontSize="16" Foreground="White" Margin="4 0 0 0"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
